<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="New Text" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewId"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/textViewId"
        android:layout_toRightOf="@+id/textViewId"
        android:text="New Text" />

    <TextView
        android:id="@+id/textViewApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="190dp"
        android:layout_alignTop="@+id/textViewNombre"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="New Text" />

    <TextView
        android:id="@+id/textViewEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textViewApellido"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="New Text" />


</RelativeLayout>